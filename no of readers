class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
         Scanner sc=new Scanner(System.in);
         int t=sc.nextInt();
         while(t-->0){
             int n=sc.nextInt();
             int x=sc.nextInt();
             int k=sc.nextInt();
             int g=n-x;
             int br=x%k;
             int gr=g%k;
             System.out.println(Math.abs(br-gr));
         }
	}
}
